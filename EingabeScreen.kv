<EingabeScreen>:
    stand_data: stand_data
    date_data: date_data
    time_data: time_data
    AnchorLayout:
        
        anchor_y: "center"
        BoxLayout:
            spacing: 5
            padding: 20
            heigth: 20
            size_hint_y: None
            orientation: "vertical"
                
            MDTextField:
                id: stand_data
                hint_text: "Zaehlerstand"
            MDTextField:
                id: date_data
                hint_text: "Datum"
                text: app.get_date()
            MDTextField:
                id: time_data
                hint_text: "Uhrzeit"
                text: app.get_time()

            MDFlatButton:
                text: "Eingeben"
                size_hint: 1,1
                on_release:
                    app.enter_data()

